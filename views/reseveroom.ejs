        <a class="w3-button w3-gray w3-round-xxlarge" href="/">ออกจากระบบ</a>
       </div></center>
  </div>  </div>  

<!-- Page Content -->
<div style="margin-left:25%">
  <div class="w3-container w3-gray">
      <center><br><h1 style="font-family: 'Kanit', sans-serif" >&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; จองห้องประชุม </h1><br></center>
  </div>

  
  <div class="div1">
    <form method="POST" action="/reseveroom">
  
      <div class="field">
       <label>ชื่อ</label>
      </div><br>
      <div class="field">
      <input name="name" type="text" required class="form-control"/>
     </div><br>

  
     <div class="field">
       <label>เบอร์โทรศัพท์</label>
      </div><br>
      <div class="field">
      <input name ="mobile" type="text" required class="form-control"/>
     </div><br>

     <div class="field">
      <label>หัวข้อประชุม</label>
     </div><br>
     <div class="field">
     <input name ="section" type="text" required class="form-control"/>
    </div><br>
  
  
    <div class="field">
      <label for="departmentname">เลือกแผนก</label>
    </div><br>
    <div class="field">
      <select id="departmentname" name="departmentname" required class="form-control">
        <% departments.forEach(department => { %>
          <option value="<%= department.departmentname %>"><%= department.departmentname %></option>
        <% }); %>
      </select>
      <br>
    </div><br>

    <div class="field">
      <label for="roomname">เลือกห้องประชุม</label>
    </div><br>
    <div class="field">
      <select id="roomname" name="roomname" required class="form-control">
        <% rooms.forEach(room => { %>
          <option value="<%= room.roomname %>"><%= room.roomname %></option>
        <% }); %>
      </select>
    </div><br>
    
    <div class="field">
      <label for="date">เลือกวันที่</label>
    </div><br>
    <div class="field">
      <input type="date" class="form-control" id="date" name="date" value="yyyy-mm-dd HH:MM:ss" required >
    </div><br>
    <div class="field">
      <label for="Entime">เลือกเวลา</label>
    </div><br>
    <div class="field">
      <input type="time" name="Entime" required class="form-control" >
    </div><br>
    <div class="field">
      <label for="Detime">ถึง</label>
    </div><br>
    <div class="field">
      <input type="time" name="Detime" required class="form-control" >
    </div><br>

    <div class="field">
      <label>สถานะ</label>
     </div><br>
     <div class="field">
          <select name="status" type="text" required class="form-control">
            <option value="รอการอนุมัติ">รอการอนุมัติ</option>
            
          </select>
    </div><br>

      <br>
      <div class="field">
        <center><button class="w3-button w3-gray w3-round-xxlarge" style="font-family: 'Kanit', sans-serif" type="submit" onclick="myFunction()"  >บันทึก</button></center>
        <script>
          function myFunction() {
            alert("จองห้องประชุมสำเร็จ");
          }
          </script>
      </div>
   </form>
  </div>
  



